<layout id="WatchFace">

    <label id="TimeDisplay" x="center" y="center" font="@Fonts.customFont" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="SecondsDisplay" text="00" x="180" y="120" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
 
    <label id="DateDisplay" text="Mon 1 Jan" x="center" y="140" font="Graphics.FONT_TINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE"/>

    <label id="HeartrateIcon" text="e" x="35" y="35" font="@Fonts.icoFont" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_DK_GRAY" />
    <label id="HeartrateDisplay" text="000" x="60" y="36" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />

    <label id="StepcountIcon" text="e" x="148" y="35" font="@Fonts.icoFont" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_DK_GRAY" />
    <label id="StepcountDisplay" text="00000" x="165" y="35" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    
    <label id="BatteryDisplay" text="00" x="96" y="171" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="BatteryIcon" text="d" x="124" y="170" font="@Fonts.icoFont" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_DK_GRAY" />

</layout>